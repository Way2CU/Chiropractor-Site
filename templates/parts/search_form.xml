<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<form method="get" action="url_Make('', 'search')" cms:eval="action">
		<div class="service_type">
			<label>
				<input type="radio" name="type" value="car" checked="checked"/>
				<span><cms:text constant="type_car"/></span>
			</label>
			<label>
				<input type="radio" name="type" value="motorcycle"/>
				<span><cms:text constant="type_motorcycle"/></span>
			</label>
			<label>
				<input type="radio" name="type" value="truck"/>
				<span><cms:text constant="type_truck"/></span>
			</label>
		</div>

		<label>
			<svg viewBox="0 0 113 100"><use xlink:href="#icon-home"/></svg>
			<input type="search" name="query"/>

			<!-- Locate by GPS button -->
			<a class="gps">
				<svg viewBox="0 0 95 100"><use xlink:href="#icon-gps"/></svg>
			</a>
		</label>

		<div class="controls">
			<button type="submit"><cms:text constant="search"/></button>
		</div>
	</form>
</document>
