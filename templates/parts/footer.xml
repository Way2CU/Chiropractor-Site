<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<footer>
		<div class="inner_wrap">
			<div class="content_container">
				<h2><cms:text constant="footer_anywhere_anytime"/></h2>
				<span><cms:text constant="get_tow"/></span>
				<div></div>
			</div>
			<div class="mobile_pic"></div>
		</div>

		<div class="copyright">
			<div class="inner_wrap">
				<div class="left_container">
					<!-- Container for copyright and contect form link -->
					<cms:text constant="add_company"/>
					<a
						 href=""
						 eval="href"
					>
						<cms:text constant="contactus_link"/>
						<svg viewBox="0 0 100 100"><use xlink:href="#icon-form"/></svg>
					</a>

					<!-- lower text of the container -->
					<span><cms:text constant="get_company_listed"/></span>
				</div>

				<div class="right_container">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_text"
						template="parts/footer_article.xml"
					/>
				</div>
				<a
					 href=""
					 eval="href"
					 class="copyright"
				>
				<svg class="icon icon-way2cu" viewBox="0 0 87 100"><use xlink:href="#icon-way2cu"/></svg>
					<cms:text constant="copyright"/>
				</a>
			</div>
		</div>
	</footer>
</document>
